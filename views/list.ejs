<%- include("header") -%>
<div class='box' id="heading">
    <h1><%= ListTitle %>.</h1>
</div>
<div class="box">
    <% for (let i=0; i<itemsarray.length; i++) { %>
    <div class="item">
        <input type="checkbox">
        <p><%= itemsarray[i].note %><p>
        <button class="del" data-id=<%= itemsarray[i].id %> type="submit" name="">-</button>
    </div>
    <% } %>
    <form class="item" action="/" method="POST">
        <input type="text" name="nameItem" placeholder="New Item" autocomplete="off">
        <button class="add" type="submit" name="list" value=<%= ListTitle %>>+</button>
    </form>


</div>
<div>
    <template id="user-info-template">
        <div id="user-info-container">
            <label>Username</label>
            <p class="username"></p>
            <label>Age:</label>
            <p class="age"></p>
        </div>
    </template>
</div>


<%- include("footer") -%>